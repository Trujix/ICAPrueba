
<div class="modal-header">
    <h5 class="modal-title">¿Desea hacer la asignación de criterios de evaluación al equipo registrado?</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <form id="valor-form">
        @Html.AntiForgeryToken()
    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-success btn-sm" id="guardar-valor" data-dismiss="modal">Si</button>
    <button type="button" class="btn btn-light btn-sm" data-dismiss="modal" id="btn-no">No</button>
</div>
<script type="text/javascript">
    $(function () {

        $('#guardar-valor').click(function (e) {
            window.location.href = "@Url.Action("Index","AsignacionCriterios")";
        });

        $("#btn-no").click(function (e) {
            location.reload();
        });

    });
</script>

