
@model ICA.Models.Criterio
<div class="modal-header">
    <h5 class="modal-title">¿Desea eliminar al Criterio @Model.Nombre?</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <form id="valor-form">
        @Html.AntiForgeryToken()
    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-success btn-sm" id="guardar-valor" data-dismiss="modal">Aceptar</button>
    <button type="button" class="btn btn-light btn-sm" data-dismiss="modal">Cancelar</button>
</div>
<script type="text/javascript">
    $(function () {

        $('#guardar-valor').click(function (e) {
            var $form = $("#valor-form");
            if (!$form.valid()) return false;


            var data = {
                __RequestVerificationToken: $form.find('input[name="__RequestVerificationToken"]').val(),
                criterio: {
                    CRTId: "@Model.CRTId"
                }
            };

            $.ajax({
                type: 'POST',
                url: '@Url.Action("Delete", "Criterios")',
                data: data,
                dataType: 'json',
                success: function (response) {
                        location.reload();
                }

            });
        });

    });
</script>



